<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gregttn.fragmentexample.fragments.ShowSelectionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Fragment"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/select_fragment_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:checkedButton="@+id/one_radio_button">

            <RadioButton
                android:id="@+id/one_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="One" />

            <RadioButton
                android:id="@+id/two_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="Two" />
        </RadioGroup>
    </LinearLayout>

</FrameLayout>

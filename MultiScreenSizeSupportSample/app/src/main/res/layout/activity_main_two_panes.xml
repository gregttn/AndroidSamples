<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/article_list_fragment"
        android:name="com.gregttn.multiscreensizesupportsample.ArticleListFragment"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/article_view_fragment" />

    <fragment
        android:id="@+id/article_view_fragment"
        android:name="com.gregttn.multiscreensizesupportsample.ArticleViewFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/article_list_fragment"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
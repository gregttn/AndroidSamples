<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gregttn.datastorage.SpaceStatistics">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/space_stats_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disk space stats"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/free_space_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Space"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/free_space_figure_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/total_space_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Space"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_space_figure_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>
</FrameLayout>
